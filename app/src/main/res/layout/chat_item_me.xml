<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--     Right Chat (Me) -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/me_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        app:civ_border_overlay="true"
        app:civ_border_width="2dp"
        app:civ_border_color="#000000"
        android:src="@drawable/my_profile"
        android:layout_marginEnd="8dp"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/me_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textColor="#333333"
        android:layout_toLeftOf="@+id/me_iv"
        android:layout_marginRight="16dp"/>

    <TextView
        android:id="@+id/me_tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello android"
        android:layout_below="@+id/me_tv_name"
        android:layout_toLeftOf="@id/me_iv"
        android:layout_marginRight="16dp"
        android:padding="12dp"
        android:maxWidth="250dp"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/teal_200"
        android:textColor="#ffffff"/>
    <TextView
        android:id="@+id/me_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13:35"
        android:textSize="12sp"
        android:layout_toLeftOf="@+id/me_tv_msg"
        android:layout_marginRight="8dp"
        android:layout_alignBottom="@id/me_tv_msg"/>

</RelativeLayout>